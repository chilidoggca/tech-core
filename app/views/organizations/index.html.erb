<%= render 'search_forms' %>
<div class="row justify-content-center">
  <% @organizations.each do |organization| %>
    <div class="col-8 col-sm-6 col-md-4 col-lg-3">
      <div class="card sm-6 mb-4 lg-3 box-shadow about">
        <%= image_tag(organization.logo, class:"img-responsive center-block") %>
        <div class="card-body">
          <p class="card-title"><%= link_to organization.name %></p>
          <p class="card-text"><%= organization.tech_team_size %> employees</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
