<!DOCTYPE html>
<html>
  <head>
    <title>Techcore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header id="home">
  		<!-- Background Image -->
  		<div class="bg-img" style="background-image: url('/assets/background2.jpg');">
  			<div class="overlay"></div>
  		</div>
  		<!-- /Background Image -->

  		<!-- Nav -->
  		<nav id="nav" class="navbar nav-transparent">
  			<div class="container">

  				<div class="navbar-header">
  					<!-- Logo -->
  					<div class="navbar-brand">
  						<a href="index.html">
  							<%= image_tag 'logo.png', class: 'logo' %>
  							<%= image_tag 'logo-alt.png', class: 'logo-alt' %>
  						</a>
  					</div>
  					<!-- /Logo -->

  					<!-- Collapse nav button -->
  					<div class="nav-collapse">
  						<span></span>
  					</div>
  					<!-- /Collapse nav button -->
  				</div>

  				<!--  Main navigation  -->
  				<ul class="main-nav nav navbar-nav navbar-right">
  					<li><%= link_to 'Directory', '#' %></li>
  					<li><li class="nav-item"><%= link_to 'Events', '#' %></li>
  					<li><%= link_to 'News', '#' %></li>

            <% if user_signed_in? %>
  					<li class="has-dropdown"><a href="#blog">User Name</a>
  						<ul class="dropdown">
  							<li><%= link_to("My Events", '#') %></li>
  							<% if true #current_user.is_admin? %>
                  <li><%= link_to("Dashboard", '#') %></li>
                <% end %>
                <span>Hello, <%= current_user.first_name %>!</span>
                <li><%= link_to('Sign Out', session_path, method: :delete, data: {confirm: 'Do you really want to sign out?'}) %></li>
  						</ul>
  					</li>
            <% else %>
              <li class="nav-item"></li>
              <li class="nav-item"></li>
              <li><%= link_to 'Sign Up', new_user_path %></li>
              <li><%= link_to 'Login', new_session_path %></li>
            <% end %>
  				</ul>
  				<!-- /Main navigation -->

  			</div>
  		</nav>
  		<!-- /Nav -->

  		<!-- home wrapper -->
  		<div class="home-wrapper">
  			<div class="container">
  				<div class="row">

  					<!-- home content -->
  					<div class="col-md-10 col-md-offset-1">
  						<div class="home-content">
  							<h1 class="white-text">We Are the Team 2</h1>
  							<p class="white-text">Morbi mattis felis at nunc. Duis viverra diam non justo. In nisl.
  							</p>
  						</div>
  					</div>
  					<!-- /home content -->

  				</div>
  			</div>
  		</div>
  		<!-- /home wrapper -->

  	</header>
    <div class="container" id="map">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2602.706205702692!2d-123.11084908463799!3d49.28196397874309!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5486717984d4ef63%3A0x695af2b5a31aca7b!2s142+W+Hastings+St%2C+Vancouver%2C+BC+V6B!5e0!3m2!1sen!2sca!4v1517023185784" width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    <main role="main">

      <div class="album py-5 bg-light">
        <div class="container">
          <% if flash[:alert].present? %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <%= flash[:alert] %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>

          <% if flash[:notice].present? %>
          <div id="notice" class="alert alert-info alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% end %>

          <%= yield %>
        </div>
      </div>

    </main>

    <footer id="footer" class="sm-padding bg-dark">

  		<!-- Container -->
  		<div class="container">

  			<!-- Row -->
  			<div class="row">

  				<div class="col-md-12">

  					<!-- footer logo -->
  					<div class="footer-logo">
  						<a href="index.html"><%= image_tag 'logo-alt.png', class: 'logo-alt' %></a>
  					</div>
  					<!-- /footer logo -->

  					<!-- footer follow -->
  					<ul class="footer-follow">
  						<li><a href="#"><i class="fa fa-facebook"></i></a></li>
  						<li><a href="#"><i class="fa fa-twitter"></i></a></li>
  						<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
  						<li><a href="#"><i class="fa fa-instagram"></i></a></li>
  						<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
  						<li><a href="#"><i class="fa fa-youtube"></i></a></li>
  					</ul>
  					<!-- /footer follow -->

  					<!-- footer copyright -->
  					<div class="footer-copyright">
  						<p>Copyright Â© 2017. All Rights Reserved. Designed by <a href="https://colorlib.com" target="_blank">Colorlib</a></p>
  					</div>
  					<!-- /footer copyright -->

  				</div>

  			</div>
  			<!-- /Row -->

  		</div>
  		<!-- /Container -->

  	</footer>
  	<!-- /Footer -->

  	<!-- Back to top -->
  	<div id="back-to-top"></div>

    <!-- Preloader -->
  	<div id="preloader">
  		<div class="preloader">
  			<span></span>
  			<span></span>
  			<span></span>
  			<span></span>
  		</div>
  	</div>
  	<!-- /Preloader -->
</body>
  </html>
